---
import Icon from "../../assets/icons/Icon.astro";
import Logo from "./Logo.astro";
import navigation from "../../utils/navigation";

const footerLinks = navigation.footerLinks;
const { styles } = Astro.props;
---

<footer class={`flex flex-col justify-center items-center h-fit bg-093041FF py-10 text-gray text-xl ${styles}`} >
    <div class="flex items-center justify-between w-5/6 lg:w-3/4">
        <Logo />
        <div class="flex flex-col items-start justify-center gap-2 w-96">
            <h1 class="text-yellow text-2xl font-bold">BÃºsquenos</h1>
            {footerLinks.map(item => (
                    <a href={item.url} class="flex gap-2" target="_blank" rel="noopener noreferrer">
                        <Icon name={item.icon} />
                        <p>{item.label}</p>
                    </a>
            ))}
        </div>
    </div>
</footer>
