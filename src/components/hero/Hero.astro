---
import { Image } from 'astro:assets'
import background from '../../../public/images/background.webp'
import { animate, stagger } from "motion";

const fundacion = "FUNDACIÃ“N";
const dessol = "DESSOL";
---

<main class="hero is-primary h-screen">
        <div class="relative xl:top-18 w-full h-screen">
            <Image src={background} alt="Hero" class="w-full h-full object-cover" />
            <div class="absolute inset-0 bg-093041FF opacity-70"></div>
        </div>

    <div class="flex flex-col absolute bottom-40 right-2 md:bottom-1/3 md:right-1/8 gap-10">
        <h1 class="text-6xl md:text-8xl font-bold text-gray">
            {fundacion.split("").map((char, i) => (
                    <span key={i} class="letter opacity-0">{char === " " ? "\u00A0" : char}</span>
            ))}
        </h1>
        <h1 class="text-7xl md:text-9xl font-bold text-yellow">
            {dessol.split("").map((char, i) => (
                    <span key={i} class="letter opacity-0">{char === " " ? "\u00A0" : char}</span>
            ))}
        </h1>
    </div>
</main>

<script>
    import { animate, stagger } from "motion";

    document.addEventListener("DOMContentLoaded", () => {
        const letters = document.querySelectorAll(".letter");
        animate(letters, { opacity: [0, 1], y: [20, 0] }, { delay: stagger(0.14) });
    });
</script>
